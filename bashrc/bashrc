#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'

export ODIN_ROOT="/opt/Odin"
export PATH="$PATH:/opt/bin"
. "$HOME/.cargo/env"
. "$HOME/.deno/env"

PROMPT_COMMAND='PS1_CMD1=$(git branch --show-current 2>/dev/null)'; PS1='-\[\e[1m\]${PS1_CMD1}\[\e[0m\]- \[\e[96;3m\]\h\[\e[0m\] \[\e[92m\]\w\[\e[91;1;3m\]Î»\[\e[0m\] '
